{
    "manifest_version" : 2,
    "name": "EasySubtitles",
    "description": "Quick and easy access to titlovi.com for getting a subtitle for a movie or tv show.",
    "version": "1.0.0",
    "icons": { "128" : "images/icon_128.png"},
    "browser_action" : {
        "default_icon" : "images/icon_default.png",
        "default_popup" : "index.html"
    },
    "permissions" : ["activeTab"]
}